<?xml version="1.0"?>
<launch>
  <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" output="screen"/>
  
  <node pkg="nodelet" type="nodelet" name="point_cloud_nodelet"
        args="load depth_image_proc/point_cloud_xyz nodelet_manager" output="screen">
    <remap from="/camera/depth_registered_filtered/camera_info" to="/camera/depth/camera_info"/>
    <remap from="image_rect" to="/camera/depth_registered_filtered/image_rect"/>
    <remap from="points" to="/camera/depth/filtered_points"/>
  </node>
</launch>
